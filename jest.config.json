{
  "testEnvironment": "node",
  "roots": [
    "<rootDir>/api",
    "<rootDir>/test"
  ],
  "testMatch": [
    "**/__tests__/**/*.+(ts|js)",
    "**/?(*.)+(spec|test).+(ts|js)"
  ],
  "transform": {
    "^.+\\.(js|ts)$": "babel-jest"
  },
  "moduleDirectories": [
    "node_modules",
    "api"
  ],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "api/**/*.{js,ts}"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/test/"
  ]
}